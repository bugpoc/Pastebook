<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Pastebook</title>
    @Styles.Render("~/Content/gentelella")
</head>
<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="@Url.Action("Index","Pastebook")" class="site_title"><i class="fa fa-connectdevelop"></i> <span class="highlight">Paste</span>book</a>
                    </div>
                    <div class="clearfix"></div>
                    <!-- menu profile quick info -->
                    <div class="profile">
                        <div class="profile_pic">
                            <img src="@Url.Content("~/Content/Images/default.jpg")" alt="Profile Picture" class="img-circle profile_img imageSource">
                        </div>
                        <div class="profile_info">
                            <span>Welcome,</span>
                            <p class="name h4"></p>
                        </div>
                    </div>
                    <!-- /menu profile quick info -->
                    <br />
                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">
                            <h3>Menu</h3>
                            <ul class="nav side-menu">
                                <li>
                                    <a href="@Url.Action("Index","Pastebook")"><i class="fa fa-home"></i> Home </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("UserProfile","Pastebook", new { username = Session["username"].ToString()})"><i class="fa fa-user"></i> Profile </a>
                                </li>
                                <li>
                                    <a><i class="fa fa-users"></i> Friends <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li>
                                            <a href="@Url.Action("FriendRequest","Pastebook")">Friend Request</a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("Friends","Pastebook")">Friend List</a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a><i class="fa fa-gear"></i> Settings <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li>
                                            <a href="@Url.Action("EditInformation","Pastebook")">Edit Information</a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("EditEmail","Pastebook")">Edit Email Address</a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("EditPassword","Pastebook")">Edit Password</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>

                    </div>
                    <!-- /sidebar menu -->
                </div>
            </div>
            <!-- top navigation -->
            <div class="top_nav">
                <div class="nav_menu">
                    <nav>
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>
                        <div class="col-md-3">
                            <div class="input-group search-div">
                                <input id="txtName" type="text" class="form-control search-bar" placeholder="Search for...">
                                <span class="input-group-btn">
                                    <button id="searchUser" class="btn btn-default search-button" type="button">Search</button>
                                </span>
                            </div>
                        </div>
                        <ul class="nav navbar-nav navbar-right">
                            <li class="">
                                <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    <img src="@Url.Content("~/Content/Images/default.jpg")" alt="Profile Picture" class="imageSource"><span class="name"></span>
                                    <span class="fa fa-angle-down"></span>
                                </a>
                                <ul class="dropdown-menu dropdown-usermenu pull-right">
                                    <li><a href="@Url.Action("Logout","Pastebook")"><i class="fa fa-sign-out pull-right"></i> Log Out</a></li>
                                </ul>
                            </li>
                            <li role="presentation" class="dropdown">
                                <a id="viewNotifications" href="javascript:;" class="dropdown-toggle info-number" data-toggle="dropdown" aria-expanded="false">
                                    <i class="fa fa-globe"></i>
                                    <span id="notifCount" class="badge bg-green"></span>
                                </a>
                                <ul id="menu1" class="dropdown-menu list-unstyled msg_list" role="menu">
                                    @{ Html.RenderAction("NotificationPartial", "Pastebook");}
                                </ul>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                @Html.Partial("ErrorModal")
                <input id="hiddenSessionUsername" type="hidden" value="@Session["username"].ToString()" />
                @RenderBody()
            </div>
            <!-- /page content -->
            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    Gentelella - Bootstrap Admin Template by <a href="https://colorlib.com">Colorlib</a>
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script>
        var userInformationUrl = '@Url.Action("GetProfileInformation","Pastebook")';
        var searchUrl = '/Pastebook.com/SearchUser/';
        var getCountOfNotificationUrl = '@Url.Action("GetCountOfNotification", "Pastebook")';
        var notificationPartialUrl = '@Url.Action("NotificationPartial","Pastebook")';
        var updateNotificationsUrl = '@Url.Action("UpdateNotifications", "Pastebook")';
    </script>
    @Scripts.Render("~/bundles/pastebook")
    @RenderSection("scripts", required: false)
</body>
</html>
