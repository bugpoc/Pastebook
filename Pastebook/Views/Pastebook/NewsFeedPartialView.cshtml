@model IEnumerable<Pastebook.ViewModels.PostViewModel>


@{ if (Model != null)
    {
        foreach (var item in Model)
        {
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            @if (item.ProfileOwnerID != item.PosterID)
                            {

                                <h2>@item.FullName posted to You</h2>
                                <h5 class="date-align">@item.CreatedDate</h5>
                                <div class="clearfix"></div>
                            }
                            else
                            {

                                <h2>@item.FullName</h2>
                                <h5 class="date-align">@item.CreatedDate</h5>
                                <div class="clearfix"></div>
                            }
                        </div>
                        <div class="x_content">
                            <p>@item.Content</p>
                            <p><span class="fa fa-thumbs-up"></span> @item.Likes.Count</p>
                            @if (item.Likes.Any(l => l.LikedBY == (int)Session["user_id"] && l.PostID == item.ID))
                            {
                                <button id="unlike" type="button" class="btnLike btn btn-danger fa fa-thumbs-down" value="@item.ID"> Unlike</button>
                            }
                            else
                            {
                                <button id="like" type="button" class="btnLike btn btn-primary fa fa-thumbs-up" value="@item.ID"> Like</button>
                            }
                            @if (item.Likes.Count > 0)
                            {
                                <p>Liked By:</p>
                                <div>
                                    @foreach (var element in item.Likes)
                                    {
                                        <p>@element.FullName</p>
                                    }
                                </div>
                            }

                            @if (item.Comments.Count > 0)
                            {
                                <p>Comments:</p>
                                    <div>
                                        @foreach (var element in item.Comments)
                                        {
                                            <p>@element.FullName : @element.Content</p>
                                        }
                                    </div>
                            }
                            <textarea id="@item.ID"></textarea>
                            <div class="ln_solid"></div>
                            <button type="button" class="btnComment btn btn-primary btn-post" value="@item.ID">Comment</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div> There are no post.</div>
    }
}

